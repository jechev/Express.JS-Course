extend ../shared/layout
block  content
    h2.page-header Update Tweet
    if errors
        each error in errors
            div.alert.alert-danger #{error.msg}
    form(action="/tweet/update/" + tweet._id  method="post")
        div.form-group
            label Text
            input.form-control(type="text" name="text" placeholder="Text" id="text" value=tweet.text maxLength="140")
        button.btn.btn-success(type="submit") Update tweet