extend ../shared/layout
block  content
    h2.page-header Add Article Page
    if errors
        each error in errors
            div.alert.alert-danger #{error.msg}
    form(action='/article/add' method='post')
        div.form-group
            label Title
            input.form-control(type='text' name='title' placeholder='Title')
        div.form-group
            label Description
            textarea.form-control(name='description' rows="5") 
        button.btn.btn-success(type='submit') Add Article